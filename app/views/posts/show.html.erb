
<div class="container">
    <h3><%= @post.title %></h3>
    <p><%= @post.body %></p>
    <% if current_user %>
        <hr/>
        <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: "Are you sure?"}, class: "right" %>
        <%= link_to 'Edit', edit_post_path, class: "right" %>
    <% end %>
</div>